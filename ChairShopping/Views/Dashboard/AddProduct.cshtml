@model ProductViewModel
@{
    Layout = null;
}
<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="shortcut icon" href="~/favicon.png" type="">
    <title>Famms - Fashion HTML Template</title>
    <!-- bootstrap core css -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.min.css" />
    <!-- font awesome style -->
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/css/style.css" rel="stylesheet" />
    <!-- responsive style -->
    <link href="~/css/responsive.css" rel="stylesheet" />
</head>
<div asp-validation-summary="All" class="text-danger"></div>
<form class="m-3" asp-action="AddProduct" asp-controller="dashboard" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="CategoryId">Category Name:</label>
        <select id="CategoryId" name="CategoryId" class="form-control">
            <option value="">-- Select Category --</option>
            @foreach (var category in Model.categoriesList)
            {
                <option value="@category.Value">@category.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Product Name</label>
        <input type="text" class="form-control" asp-for="ProductName" placeholder="Enter ProductName">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Product Description</label>
        <input type="text" class="form-control" asp-for="ProductDescription" placeholder="Enter Description">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Product Color</label>
        <input type="text" class="form-control" asp-for="Color" placeholder="Enter Color">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Product Price</label>
        <input type="text" class="form-control" asp-for="Price" placeholder="Enter Price">
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Images</label>
        <input type="file" class="form-control" asp-for="Image" placeholder="Enter Image">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-success" asp-controller="dashboard" asp-action="GetAllProducts">Back</a>
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <!-- popper js -->
    <script src="~/js/popper.min.js"></script>
    <!-- bootstrap js -->
    <script src="~/js/bootstrap.min.js"></script>
    <!-- custom js -->
    <script src="~/js/custom.js"></script>
</form>
